{
    "theme": "Catppuccin Mocha",
    "vim_mode": false,
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "soft_wrap": "editor_width",
    "ui_font_family": "iA Writer Mono S",
    "buffer_font_family": "iA Writer Mono S",
    "autosave": "on_window_change",
    "buffer_font_features": {
        "liga": true
    },
    "deno": {
        "enable": false
    },
    "format_on_save": "on",
    "base_keymap": "JetBrains",
    "inlay_hints": {
        "enabled": true
    },
    "linter": "eslint",
    "bracket_pairing": "always",
    "eslint": {
      "enabled": true,
      "autoFixOnSave": true,
      "autoFixOnFormat": true,
      "autoFixOnFormatDelay": 1500
    },
    "language_overrides": {
        "JavaScript": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            },
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "JSON": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "HTML": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "TypeScript": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            },
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        },
        "CSS": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "TSX": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            },
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        }
    },
    "journal": {
        "path": "~",
        "hour_format": "hour24"
    },
    "terminal": {
        "copy_on_select": true,
        "dock": "right",
        "default_width": 200
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "checkOnSave": {
                    "command": "clippy"
                }
            }
        },
        "eslint": {
            "initialization_options": {
                "checkOnSave": {
                    "command": "eslint"
                }
            },
            "probe": [
                "javascript",
                "javascriptreact",
                "typescript",
                "typescriptreact",
                "html",
                "markdown"
            ],
            "validate": [
                "javascript",
                "typescript",
                "javascriptreact",
                "svelte"
            ]
        }
    }
}
